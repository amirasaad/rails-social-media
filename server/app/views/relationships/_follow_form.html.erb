<% user||= local_assigns[:user] %>
<% if current_user %>
<% unless current_user.id == user.id %>
  <div id="follow_form">
  <% if current_user.following?(user) %>
    <%= render partial: 'relationships/unfollow', locals: { user: user } %>
  <% else %>
    <%= render partial: 'relationships/follow', locals: { user: user }%>
  <% end %>
  </div>
<% end %>
<% end %>