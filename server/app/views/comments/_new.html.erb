<%= bootstrap_form_for [post, post.comments.new] , remote: true do |f| %>
  <%= csrf_meta_tags %>
  <div class="input-group">
  <%= f.text_area :body, :placeholder => 'Write a comment', hide_label: true %>
    <span class="input-group-btn">
  <%= f.submit 'Comment' ,:class =>'btn btn-success btn-sm' %>
    </span>
  </div>
<% end %>
