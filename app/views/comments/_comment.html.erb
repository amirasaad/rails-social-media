
<%= div_for comment do %>

<div class="media well well-sm" id= "<%=  dom_id(comment) %>">
    <a class="pull-left" href="#">
		<%= gravatar_for comment.user ,:size => 32 ,:class => "media-object img-thumbnail"%>
	</a>
	<% if comment.user == current_user || comment.post.user ==  current_user%>
		<span class='actions pull-right'>
			<%= link_to "", post_comment_path(:post_id => comment.post,
			:id => comment), confirm: 'Are you sure?', method: :delete , :remote=> true ,:class => 'btn btn-sm btn-danger glyphicon glyphicon-remove'%>
		</span>
		<% end %>
	<div class ="media-body ">
		<h4 class="media-heading"><%=link_to comment.user.username  , "/#{comment.user.username}" %>
		</h4>


	    <div class="bubble">
	    	<p><%= comment.body %> </p>
	    </div>


		<small><%= time_ago_in_words(comment.created_at) %> ago.</small>
	</div>


</div>




<% end %>

<script>
	$(document).ready(function(){
		$('.actions').hide();

</script>
