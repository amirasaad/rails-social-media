<script type="text/javascript">
	$('.actions').hide();
	var mouseover = function() {
		$(this).find('.actions').show();
	};

	var mouseout = function() {
		$(this).find('.actions').hide();
	};

	$('.comment').hover(mouseover, mouseout);
</script>
<%= div_for comment do %>

<div class="media " id= "<%=  dom_id(comment) %>">
    <a class="pull-left" href="#">
		<img class="media-object img-circle" src="../user_avatar.png" alt="64x46">
	</a>
	<% if comment.user == current_user || comment.post.user ==  current_user%>
		<span class='actions pull-right' style="padding:5px;" >
			<%= link_to "", post_comment_path(:post_id => comment.post,
			:id => comment), confirm: 'Are you sure?', method: :delete , :remote=> true ,:class => 'close icon-remove'%>
		</span>
		<% end %>
	<div class ="media-body comment">
	<div class="media-heading">
		<h4>@<%= comment.user.username%></h4>

	</div>
	
	<blockquote>
		<p><%= comment.body %> </p>
		

		<small> <%= time_ago_in_words(comment.created_at) %> ago.</small>
	</blockquote>
	
	</div>
</div>



<% end %> 