<script type="text/javascript">
	$('.actions').hide();
	var mouseover = function() {
		$(this).find('.actions').show();
	};

	var mouseout = function() {
		$(this).find('.actions').hide();
	};

	$('.post').hover(mouseover, mouseout);

	
</script>
<%= div_for post do %>
<div class="media" id="<%= dom_id(post) %>" >
	<a class="pull-left" href="#">
		<img class="media-object img-circle" src="../avatar.jpg" alt="64x46">
	</a>
	<div class="media-body post" >

		<h4 class="media-heading">@<%=link_to post.user.username  , "/#{post.user.username}" %>
		</h4>

		<blockquote>
			<div class="actions pull-right" style="margin-right:50px;">
						<% if post.owned_by? current_user %>
						<%= link_to "Edit", edit_post_path(post) ,:class => "btn " ,:remote => true %>
						<%= link_to "Delete", post, confirm: "Are you sure?", method: :delete  ,:class => "btn btn-danger" ,:remote => true%>
						<% end %>
					</div>
					<p class="lead"><%=  post.body %></p>
					<small><%= time_ago_in_words(post.created_at) %> ago</small>
				</blockquote>
			</div>
		</div>

		<div id="comments">

			<%= for comment in post.comments do %>
			 <%= render :partial => comment ,:locals =>{:comment => comment} %>
			<% end %>
			

		</div>
		<div>
		<% if current_user %>
		<%= render :partial => "comments/new" ,:locals => {:post => post}%>
		<%end %>
		</div>
<% end %>  


