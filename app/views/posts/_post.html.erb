
<%= div_for post do %>
<div class="media well " id="<%= dom_id(post) %>" >
	<a class="pull-left" href="#">
	<%= gravatar_for post.user ,:size => 64 %>
	</a>
	<div class="actions pull-right" >
		<% if post.owned_by? current_user %>
		<ul>

		<li><%= link_to " ", post, confirm: "Are you sure?", method: :delete  ,:class => "close icon-remove" ,:remote => true%>  </li>
		<li><%= link_to " ", edit_post_path(post) ,:class => "close icon-pencil" ,:remote => true %></li>
		</ul>


		<% end %>
	</div>
	<div class="media-body post" >

		<h4 class="media-heading">@<%=link_to post.user.username  , "/#{post.user.username}" %>
		</h4>

		<blockquote>
			
			<p><b class="lead"><%=  post.body %></b></p>
			<small class="label label-info">
			<%= time_ago_in_words(post.created_at) %> ago.  
				| <span id="count_comments"><%= post.comments.count%></span> Comments
			</small>
		</blockquote>
	</div>
</div>


<div id="comments">

	<% if  post.comments.count >= 3 %>
	<%= link_to "See all comments" ,post_path(post) ,:remote => true %>
	<% end %>

	<%= render :partial => 'posts/postcomments',:locals => {:comments => post.latest_comments} %>

</div>
<div style="padding:5px;margin-left:50px;">
	<% if current_user %>
	<%= render :partial => "comments/new" ,:locals => {:post => post}%>
	<%end %>
</div>
<% end %>  


