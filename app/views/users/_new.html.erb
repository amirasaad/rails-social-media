<div class="box">
	<%= simple_form_for user, :html => { :class => 'form-horizontal' }  do |f| %>
	<div class="input-group">
		<span class="input-group-addon">@</span>
		<%= f.input :username ,:placeholder => 'your_name'%>
	</div>

	<%= f.input :email ,:placeholder => 'example@company.com' %>
	<%= f.input :password ,:placeholder => '$Xf%d88&&'%>
	<%= f.input :password_confirmation %>
	<div class="form-actions">
		<%=f.button :submit, 'Register' , :class => 'btn btn-success'%>
		<%= link_to "Login" ,login_path, :class => 'btn btn-primary' %>
	</div>
	<% end %>
</div>
