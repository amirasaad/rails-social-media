<section>
	<h3>
		<%= gravatar_for user , :size => 30 %>
		<%= link_to user.username , "/#{user.username}" %> 
		<% if logged_in? && current_user.admin? && !current_user?(user) %>
		| <%= link_to "delete", user, method: :delete,
		data: { confirm: "You sure?" } %>
		<% end %>
		<div class="pull-right"><%= render :partial => 'users/follow_form' ,:locals=>{user: user} if logged_in? %></div>
	</h3>
	
	<section class="stats">
		<a href="/<%= user.username %>/posts">
			<strong id="posts" class="stat">
				<%= user.posts.count %>
			</strong>
			posts
		</a>
		<a href="/<%= user.username %>/posts">
			<strong id="commetns" class="stat">
				<%= user.replies.count %>
			</strong>
			comments
		</a>
	</section>

	<section class="stats">
		<a href="<%= following_user_path(user) %>">
			<strong id="following" class="stat">
				<%= user.followed_users.count %>
			</strong>
			following
		</a>
		<a href="<%= followers_user_path(user) %>">
			<strong id="followers" class="stat">
				<%= user.followers.count %>
			</strong>
			followers
		</a>
	</section>
</section>	