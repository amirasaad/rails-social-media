<div class="col-md-6">
	<%= bootstrap_form_for(@user) do |f| %>
	<%= f.text_field :username,:placeholder => 'Username', icon: "user"%>
	<%= f.email_field :email,:placeholder => 'Email', icon: "envelope" %>
	<%= f.password_field :password,:placeholder => 'e$Xf%d88&&', icon: 'eye-close' %>
	<%= f.password_field :password_confirmation, icon: 'eye-close' %>
	<%= f.submit "Register" %>
	<% end %>

</div>
