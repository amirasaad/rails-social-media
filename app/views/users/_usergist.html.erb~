<section>
	<h1>
		<%= gravatar_for user  %>
		<%= link_to user.username , "/#{user.username}" %> 
		<% if logged_in? && current_user.admin? && !current_user?(user) %>
		| <%= link_to "delete", user, method: :delete,
		data: { confirm: "You sure?" } %>
		<% end %>
		
	</h1>
	<div id="followings" class="stats">
		<strong id="followers" class="stat">
			<%= user.followers.count %>
		</strong>
		followers
	</div>
	<div class="followers_avatars">
		<% user.followers.each do |user| %>
		<%= link_to gravatar_for(user, size: 30), "/#{user.username}" %>
		<% end %>
	</div>

	<div  id="followers" class="stats">
		<strong id="following" class="stat">
			<%= user.followed_users.count %>
		</strong>
		following
	</div>
	<div class="followings_avatars">
		<% user.followed_users.each do |user| %>
		<%= link_to gravatar_for(user, size: 30), "/#{user.username}" %>
		<% end %>
	</div>

</section>	
