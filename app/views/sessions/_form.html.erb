<%= simple_form_for :login, { url: session_path, :html => { :class => 'form-horizontal'}}  do |f| %>
  <div class="form-group">

	<%= f.input :username ,:class => "col-sm-2" ,:wrapper => :prepend do %>
	
	    <%= content_tag :span,"@",:class => 'input-group-addon' %>
	    <div class="col-sm-10">
	    <%= f.input_field :username,:placeholder => 'Your User Name' %>
	    </div>
    <% end %>
    </div>
    
	<div class="form-group">
	<%= f.input :password , :wrapper => :prepend do %>
	   <%= content_tag :span,"", :class => 'input-group-addon glyphicon glyphicon-eye-close' %>
	   <div class="col-sm-10">
	   <%= f.input_field :password,:placeholder => 'Your password' ,:class => "input-group-lg" %>
	   </div>
	<% end %>
	</div>
  <%= f.button :submit, "Sign In" %>
<% end %>